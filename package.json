{
  "name": "foundation",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:api": "ts-node-dev --respawn src/api",
    "build": "next build",
    "build:reflection": "NEXUS_SHOULD_EXIT_AFTER_REFLECTION=true ts-node src/api",
    "start": "next start",
    "type-check": "tsc",
    "lint": "next lint",
    "format": "prettier --write '{pages,src}/**/*.{ts,tsx,css}'",
    "test:e2e": "playwright test",
    "analyze": "ANALYZE=true yarn build",
    "prepare": "husky install",
    "storybook": "start-storybook -s ./public -p 3001",
    "storybook:build": "build-storybook -s ./public",
    "generate": "graphql-codegen --config codegen.yml"
  },
  "dependencies": {
    "@prisma/client": "^3.2.0",
    "@radix-ui/colors": "^0.1.7",
    "@radix-ui/react-accessible-icon": "^0.1.1",
    "@radix-ui/react-alert-dialog": "^0.1.1",
    "@radix-ui/react-checkbox": "^0.1.1",
    "@radix-ui/react-compose-refs": "^0.1.0",
    "@radix-ui/react-dialog": "^0.1.1",
    "@radix-ui/react-dropdown-menu": "^0.1.1",
    "@radix-ui/react-icons": "^1.0.3",
    "@radix-ui/react-id": "^0.1.1",
    "@radix-ui/react-label": "^0.1.1",
    "@radix-ui/react-popover": "^0.1.1",
    "@radix-ui/react-radio-group": "^0.1.1",
    "@radix-ui/react-switch": "^0.1.1",
    "@radix-ui/react-tabs": "^0.1.1",
    "@radix-ui/react-toggle-group": "^0.1.1",
    "@radix-ui/react-visually-hidden": "^0.1.1",
    "@react-aria/button": "^3.3.4",
    "@react-aria/ssr": "^3.1.0",
    "@react-aria/textfield": "^3.4.0",
    "@stitches/react": "^1.2.5",
    "apollo-server-errors": "^3.1.0",
    "apollo-server-micro": "^3.3.0",
    "clsx": "^1.1.1",
    "focus-visible": "^5.2.0",
    "graphql": "^15.6.1",
    "graphql-middleware": "^6.1.7",
    "graphql-shield": "^7.5.0",
    "hoist-non-react-statics": "^3.3.2",
    "next": "12.0.4",
    "micro": "^9.3.4",
    "next-themes": "^0.0.15",
    "nexus": "^1.1.0",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-hook-form": "^7.19.1",
    "tinykeys": "^1.2.0",
    "urql": "^2.0.5"
  },
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@next/bundle-analyzer": "^12.0.4",
    "@playwright/test": "^1.16.3",
    "@graphql-codegen/add": "^3.1.0",
    "@graphql-codegen/cli": "2.2.0",
    "@graphql-codegen/introspection": "2.1.0",
    "@graphql-codegen/near-operation-file-preset": "^2.1.4",
    "@graphql-codegen/typescript": "2.2.2",
    "@graphql-codegen/typescript-operations": "2.1.6",
    "@graphql-codegen/typescript-urql": "^3.2.0",
    "@react-types/shared": "^3.9.0",
    "@storybook/addon-actions": "^6.3.12",
    "@storybook/addon-essentials": "^6.3.12",
    "@storybook/addon-links": "^6.3.12",
    "@storybook/addon-postcss": "^2.0.0",
    "@storybook/react": "^6.3.12",
    "@types/hoist-non-react-statics": "^3.3.1",
    "@types/node": "^16.11.10",
    "@types/react": "^17.0.37",
    "@types/react-dom": "^17.0.11",
    "@typescript-eslint/eslint-plugin": "^5.3.1",
    "autoprefixer": "^10.4.0",
    "babel-loader": "^8.2.3",
    "eslint": "<8.0.0",
    "eslint-config-next": "^12.0.4",
    "eslint-config-prettier": "^8.3.0",
    "husky": "^7.0.4",
    "lint-staged": ">=11.2.6",
    "postcss": "^8.4.4",
    "postcss-flexbugs-fixes": "^5.0.2",
    "postcss-focus-visible": "^6.0.1",
    "postcss-preset-env": "^7.0.1",
    "prettier": "^2.5.0",
    "tailwindcss": "^2.2.19",
    "typescript": "^4.5.2",
    "prisma": "^3.2.0",
    "ts-node": "^10.2.1",
    "ts-node-dev": "^1.1.8"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write"
    ],
    "*.{css,json,md,html}": [
      "prettier --write"
    ]
  },
  "graphql": {
    "schema": "src/api/schema.graphql",
    "documents": "src/**/*.{gql,ts,tsx}"
  }
}
